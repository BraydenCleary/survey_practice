<%= form_for(@survey) do |survey_form| %>
  <%= survey_form.text_field :title, :placeholder => 'survey title' %></br>
  <%= survey_form.fields_for :question do |question_form| %>
    <%= question_form.text_field :text, :placeholder => 'question text' %></br>
      <%= question_form.fields_for :choice do |choice_form| %>
        <%= choice_form.text_field :text, :placeholder => 'choice text' %></br>
      <% end %>
    <% end %>

    <%= survey_form.submit 'Submit' %>
<% end %>

